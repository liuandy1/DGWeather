<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_112"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/ll_tab_forecast"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@id/ib_tab_forecast"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_50"
            android:background="#0000"
            android:clickable="false"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_tab_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_6"
            android:text="@string/forecast"
            android:textColor="@color/common_red_text_color"
            android:textSize="@dimen/textPx_20" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_tab_early_warn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@id/ib_tab_early_warn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_50"
            android:background="#0000"
            android:clickable="false"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@id/tv_tab_early_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_6"
            android:text="@string/earlyWarn"
            android:textColor="@color/common_red_text_color"
            android:textSize="@dimen/textPx_20" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_tab_monitor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@id/ib_tab_monitor"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_50"
            android:background="#0000"
            android:clickable="false"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@id/tv_tab_monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_6"
            android:text="@string/monitor"
            android:textColor="@color/common_red_text_color"
            android:textSize="@dimen/textPx_20" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_tab_interact"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@id/ib_tab_interact"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_50"
            android:background="#0000"
            android:clickable="false"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@id/tv_tab_interact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_6"
            android:text="@string/interact"
            android:textColor="@color/common_red_text_color"
            android:textSize="@dimen/textPx_20" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_tab_mine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@id/ib_tab_mine"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_50"
            android:background="#0000"
            android:clickable="false"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@id/tv_tab_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_6"
            android:text="@string/mine"
            android:textColor="@color/common_red_text_color"
            android:textSize="@dimen/textPx_20" />
    </LinearLayout>
</LinearLayout>