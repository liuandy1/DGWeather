<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_life_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_life_index"
        style="@style/CommTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:minEms="6" />

    <View
        android:layout_width="@dimen/common_line_height"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="@color/comm_line_color" />

    <TextView
        android:id="@id/tv_life_info"
        style="@style/CommTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="的卡划分的健的卡划分的健的卡划分的健的卡划分的健的卡划分的健" />
</LinearLayout>
