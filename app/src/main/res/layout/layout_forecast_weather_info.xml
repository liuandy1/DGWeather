<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bar_bg"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_info_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_info_currentTime"
                style="@style/CommTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="周一  11月16日" />

            <ImageView
                android:id="@+id/iv_info_airQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_info_currentTime"
                android:background="@drawable/icon_air_good" />

            <TextView
                android:id="@+id/tv_info_weather"
                style="@style/CommTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_info_airQuality"
                android:text="晴"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_info_currentTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="29"
                android:textColor="@color/white"
                android:textSize="58sp" />

            <TextView
                android:id="@+id/tv_info_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_info_currentTemp"
                android:text="℃"
                android:layout_alignParentTop="true"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_info_tempRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_info_temp"
                android:layout_toRightOf="@id/tv_info_currentTemp"
                android:layout_alignBaseline="@id/tv_info_currentTemp"
                android:text="18℃~29℃"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_info_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CommTextStyle"
                android:text="东南风3级"/>

            <TextView
                android:id="@+id/tv_info_humidy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_info_wind"
                style="@style/CommTextStyle"
                android:text="湿度76%"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CommTextStyle"
            android:drawableLeft="@drawable/icon_refresh"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="15分钟前发布"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ib_info_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_warn_cold_orange"/>

        <ImageButton
            android:id="@+id/ib_info_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_warn_cold_orange"/>

        <ImageButton
            android:id="@+id/ib_info_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_warn_cold_orange"/>
    </LinearLayout>

</RelativeLayout>