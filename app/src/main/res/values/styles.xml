<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 常规字体样式-->
    <style name="CommTextStyle">
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:padding">@dimen/common_padding</item>
    </style>

    <!-- 底部菜单栏样式-->
    <style name="BottomMenuStyle">
        <item name="android:textColor">@drawable/home_tab_text_color_selector</item>
        <item name="android:textSize">@dimen/bottom_menu_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 首页  生活指数和日出日落样式-->
    <style name="LifeIndexAndSunriseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:textSize">@dimen/common_small_text_size</item>
        <item name="android:textColor">@color/common_text_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 地图设置显示类型样式-->
    <style name="MapSettingTypeStyle">
        <item name="android:textColor">@color/map_setting_text_light_gray</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/mapsetting_real_weather_selector</item>
    </style>

    <!-- 开关样式-->
    <style name="SwitchTypeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/switch_selector</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 地图设置选项TextView样式-->
    <style name="OptionTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/map_setting_text_dark_gray</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation"></style>

</resources>
